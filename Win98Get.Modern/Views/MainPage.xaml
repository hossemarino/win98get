<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Win98Get.Modern.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Win98Get.Modern"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <Grid Padding="16" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="StatusText"
                    Grid.Column="0"
                    Opacity="0.8"
                    Text="Ready" />

                <ComboBox
                    x:Name="ThemeCombo"
                    Grid.Column="1"
                    MinWidth="160"
                    HorizontalAlignment="Right"
                    SelectionChanged="OnThemeSelectionChanged">
                    <ComboBoxItem Content="System" Tag="System" />
                    <ComboBoxItem Content="Light" Tag="Light" />
                    <ComboBoxItem Content="Dark" Tag="Dark" />
                </ComboBox>
            </Grid>

            <muxc:TabView Grid.Row="1" IsAddTabButtonVisible="False" CanReorderTabs="False">
                <muxc:TabViewItem Header="Installed" IsClosable="False">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
                            <Button Content="Refresh" Click="OnRefreshInstalled" />
                            <Button x:Name="UpdateAllButton" Content="Update All" Click="OnUpdateAll" />
                            <Button x:Name="UpdateSelectedButton" Content="Update Selected" Click="OnUpdateSelected" />
                            <Button x:Name="UninstallSelectedButton" Content="Uninstall Selected" Click="OnUninstallSelected" />
                        </StackPanel>

                        <Grid Grid.Row="1" RowSpacing="6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" ColumnSpacing="12" Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Tag="Name" Click="OnInstalledHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="InstalledHeaderName" Text="Name" FontWeight="SemiBold" />
                                </Button>
                                <Button Grid.Column="1" Tag="Id" Click="OnInstalledHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="InstalledHeaderId" Text="Id" FontWeight="SemiBold" />
                                </Button>
                                <Button Grid.Column="2" Tag="Version" Click="OnInstalledHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="InstalledHeaderVersion" Text="Version" FontWeight="SemiBold" />
                                </Button>
                                <Button Grid.Column="3" Tag="Available" Click="OnInstalledHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="InstalledHeaderAvailable" Text="Available" FontWeight="SemiBold" />
                                </Button>
                            </Grid>

                            <ListView
                                x:Name="InstalledList"
                                Grid.Row="1"
                                ItemsSource="{Binding Installed}"
                                SelectionMode="Extended"
                                SelectionChanged="OnInstalledSelectionChanged"
                                RightTapped="OnInstalledRightTapped">
                                <ListView.Padding>0</ListView.Padding>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="ContextFlyout">
                                            <Setter.Value>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Update" Click="OnInstalledContextUpdate" />
                                                    <MenuFlyoutItem Text="Uninstall" Click="OnInstalledContextUninstall" />
                                                    <MenuFlyoutSeparator />
                                                    <MenuFlyoutItem Text="Show file location" Click="OnInstalledContextShowLocation" />
                                                    <MenuFlyoutSeparator />
                                                    <MenuFlyoutItem Text="Copy Id" Click="OnInstalledContextCopyId" />
                                                    <MenuFlyoutItem Text="Copy Name" Click="OnInstalledContextCopyName" />
                                                </MenuFlyout>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="12" Padding="8,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="1" Text="{Binding Id}" Opacity="0.8" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="2" Text="{Binding Version}" Opacity="0.8" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="3" Text="{Binding AvailableVersion}" Opacity="0.8" TextTrimming="CharacterEllipsis" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>

                        <TextBox
                            x:Name="InstalledDetailsBox"
                            Grid.Row="2"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </muxc:TabViewItem>

                <muxc:TabViewItem Header="Search" IsClosable="False">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="SearchBox" Grid.Column="0" PlaceholderText="Search packages..." KeyDown="OnSearchBoxKeyDown" />
                            <Button Grid.Column="1" Content="Search" Click="OnSearch" />
                            <Button x:Name="InstallSelectedButton" Grid.Column="2" Content="Install Selected" Click="OnInstallSelected" />
                        </Grid>

                        <Grid Grid.Row="2" RowSpacing="6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" ColumnSpacing="12" Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Tag="Name" Click="OnSearchHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="SearchHeaderName" Text="Name" FontWeight="SemiBold" />
                                </Button>
                                <Button Grid.Column="1" Tag="Id" Click="OnSearchHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="SearchHeaderId" Text="Id" FontWeight="SemiBold" />
                                </Button>
                                <Button Grid.Column="2" Tag="Version" Click="OnSearchHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="SearchHeaderVersion" Text="Version" FontWeight="SemiBold" />
                                </Button>
                                <Button Grid.Column="3" Tag="Source" Click="OnSearchHeaderClick" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
                                    <TextBlock x:Name="SearchHeaderSource" Text="Source" FontWeight="SemiBold" />
                                </Button>
                            </Grid>

                            <ListView
                                x:Name="SearchResultsList"
                                Grid.Row="1"
                                ItemsSource="{Binding SearchResults}"
                                SelectionMode="Single"
                                SelectionChanged="OnSearchSelectionChanged"
                                RightTapped="OnSearchRightTapped">
                                <ListView.Padding>0</ListView.Padding>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="ContextFlyout">
                                            <Setter.Value>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Install" Click="OnSearchContextInstall" />
                                                    <MenuFlyoutSeparator />
                                                    <MenuFlyoutItem Text="Copy Id" Click="OnSearchContextCopyId" />
                                                    <MenuFlyoutItem Text="Copy Name" Click="OnSearchContextCopyName" />
                                                </MenuFlyout>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="12" Padding="8,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="1" Text="{Binding Id}" Opacity="0.8" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="2" Text="{Binding Version}" Opacity="0.8" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="3" Text="{Binding Source}" Opacity="0.8" TextTrimming="CharacterEllipsis" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>

                        <TextBox
                            x:Name="DescriptionBox"
                            Grid.Row="3"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </muxc:TabViewItem>
            </muxc:TabView>
        </Grid>
    </Page.Content>
</Page>
